"x-terminal-emulator"
  Control+Alt + t

"dmenu_run -p Run: -l 8"
  Alt + F2

"amixer set Master 3+"
  XF86AudioRaiseVolume

"amixer set Master 3-"
  XF86AudioLowerVolume

"scrot"
  Print

"scrot -s"
  Alt + Print

"slock"
  Control+Alt + l

"pkill evilwm"
  Control+Alt + Delete
